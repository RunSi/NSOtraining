<config xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
  <device>
    <name>PE2</name>
      <config>
      <interface xmlns="urn:ios">
      <GigabitEthernet>
        <name>2</name>
          <service>
          <instance>
            <id>100</id>
            <ethernet/>
            <encapsulation>
              <dot1q>
                <id>1000</id>
                <second-dot1q>2000</second-dot1q>
              </dot1q>
            </encapsulation>
            <rewrite>
              <ingress>
                <tag>
                  <pop>2</pop>
                  <mode>symmetric</mode>
                </tag>
              </ingress>
            </rewrite>
            <service-policy>
              <output>
                <name>Gold</name>
              </output>
            </service-policy>
            <xconnect>
              <address>192.168.0.3</address>
              <vcid>100</vcid>
              <encapsulation>mpls</encapsulation>
            </xconnect>
          </instance>
          </service>
      </GigabitEthernet>
      </interface>
      </config>
  </device>
  </devices>
</config>
