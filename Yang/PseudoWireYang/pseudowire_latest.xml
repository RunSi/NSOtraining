<config-template xmlns="http://tail-f.com/ns/config/1.0"
                 servicepoint="pseudowire">
  <devices xmlns="http://tail-f.com/ns/ncs">
<!--________________Attachment Circuit 1____________-->
    <device>
      <name>{/AttachmentCircuit1/device-name}</name>
      <config>
      <interface xmlns="urn:ios">
      <GigabitEthernet>
        <name>{/AttachmentCircuit1/ifname</name>
          <service>
          <instance>
            <id>{/AttachmentCircuit1/svc-inst-id}</id>
            <ethernet/>
            <encapsulation>
              <dot1q>
                <id>{/AttachmentCircuit1/s-vlan}</id>
                <second-dot1q>{/AttachmentCircuit1/c-vlan}</second-dot1q>
              </dot1q>
            </encapsulation>
            <rewrite>
              <ingress>
                <tag>
                  <pop>2</pop>
                  <mode>symmetric</mode>
                </tag>
              </ingress>
            </rewrite>
            <service-policy>
              <output>
                <name>{/AttachmentCircuit1/pmap}</name>
              </output>
            </service-policy>
            <xconnect>
              <address>{/AttachmentCircuit1/peer-address}</address>
              <vcid>{/AttachmentCircuit1/vcid</vcid>
              <encapsulation>mpls</encapsulation>
            </xconnect>
          </instance>
          </service>
      </GigabitEthernet>
      </interface>
      </config>
    </device>
<!--________________Attachment Circuit 2____________-->
    <device>
      <name>{/AttachmentCircuit2/device-name}</name>
      <config>
      <interface xmlns="urn:ios">
      <GigabitEthernet>
        <name>{/AttachmentCircuit2/ifname</name>
          <service>
          <instance>
            <id>{/AttachmentCircuit2/svc-inst-id}</id>
            <ethernet/>
            <encapsulation>
              <dot1q>
                <id>{/AttachmentCircuit2/s-vlan}</id>
                <second-dot1q>{/AttachmentCircuit1/c-vlan}</second-dot1q>
              </dot1q>
            </encapsulation>
            <rewrite>
              <ingress>
                <tag>
                  <pop>2</pop>
                  <mode>symmetric</mode>
                </tag>
              </ingress>
            </rewrite>
            <service-policy>
              <output>
                <name>{/AttachmentCircuit2/pmap}</name>
              </output>
            </service-policy>
            <xconnect>
              <address>{/AttachmentCircuit2/peer-address}</address>
              <vcid>{/AttachmentCircuit2/vcid</vcid>
              <encapsulation>mpls</encapsulation>
            </xconnect>
          </instance>
          </service>
      </GigabitEthernet>
      </interface>
      </config>
    </device>
  </devices>
</config-template>
